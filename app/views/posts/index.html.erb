<h1 style="text-align: center; font-size: 24px;">Posts</h1>
<ul style="list-style-type: none; padding: 5px; display: flex; flex-direction: column; align-items: flex-start">
  <% @posts.each do |post| %>
    <li style="margin-bottom: 10px; padding: 10px; border: 1px solid #ccc; background-color: #f9f9f9;">
      <%= link_to "Open This Post",  post_path(post), style: "text-decoration: none; color: #333; font-weight: bold;" %>
      <% if can? :edit, post %>
        <%= link_to 'Edit', edit_post_path(post), style: "text-decoration: none; color: #007bff; margin-left: 10px;" %>
      <% end %>
      <% if can? :destroy, post %>
        <%= link_to 'Delete', post, data: { turbo_method: :delete, turbo_confirm: "Really?!?" }, style: "text-decoration: none; color: #d9534f; margin-left: 10px;" %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= link_to 'New Post', new_post_path, style: "display: block; margin: 20px auto; text-align: center; background-color: #007bff; color: #fff; padding: 10px 20px; text-decoration: none; border-radius: 5px;" %>
