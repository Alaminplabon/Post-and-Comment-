<h2 style="color: #004a80;font-weight: 800;"> POST LIST  </h2>
<style>
    .hop  {
        display: block;
        top: -9px;
        left: 25px;
        background: #ef8023;
        border-radius: 15px;
        color: #fff;
        font-size: 12px;
        line-height: 12px;
        padding: 5px 15px;
        z-index: 9;
    }
    .hop:hover{
        margin-right: 10px;
        background:blue;
        border-radius: 5px;
        border: none;
        color: white;
        padding: 10px 5px;
    }
</style>
<ul>
  <% @posts.each do |post| %>
    <li style="text-decoration: none;color: #2E2F30;font-size: 1.6em">
      <%=post.title%><br/>
      <button class="hop"><%= link_to "OPEN THIS POST",  post_path(post),style: "text-decoration: none;color:white;"%></button>
      <% if can? :edit, post %>
        <button style="background-color: #444444;border-radius: 5px;"><%= link_to 'EDIT', edit_post_path(post),style: "text-decoration: none;color:white;"%></button>
      <% end %>
      <% if can? :destroy, post %>
        <button style="background-color:darkred;border-radius: 5px;"><%= link_to 'Delete', post, data: { turbo_method: :delete, turbo_confirm: "Really?!?" },style: "text-decoration: none;color:white;"%></button>
      <% end %>
      <br/>
    </li>
  <% end %>
</ul>
<button class="hop" style="background-color: #004a80"><%= link_to 'CREATE YOUR POST', new_post_path, style:"text-decoration:none;text-align:center;color:White"%></button>
