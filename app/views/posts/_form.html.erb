<%= form_for @post, html: { class: 'post-form' } do |f| %>
  <div class="field">
    <%= f.label :title, class: 'label' %>
    <%= f.text_field :title, class: 'input' %>
  </div>
  <div class="field">
    <%= f.label :content, class: 'label' %>
    <%= f.text_area :content, class: 'textarea' %>
  </div>
  <div class="actions">
    <%= f.submit class: 'button' %>
  </div>
<% end %>
